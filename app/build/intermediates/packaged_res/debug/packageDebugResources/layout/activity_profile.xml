<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:id="@+id/profileContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="24dp"
        android:paddingBottom="80dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp">

        <!-- 상단바 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="#FAFAFA">

            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:src="@drawable/re_ceipt_logo"
                android:contentDescription="Re:Ceipt 로고"
                android:scaleType="fitStart"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/btnPayment"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_payment"
                android:contentDescription="결제"
                app:tint="#222" />
        </LinearLayout>

        <!-- 마이페이지 섹션 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="마이페이지"
            android:textStyle="bold"
            android:textColor="#888"
            android:textSize="13sp"
            android:paddingStart="16dp"
            android:paddingTop="24dp"
            android:paddingBottom="8dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/menuMyInfo"
                style="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="내 정보"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/menuPointHistory"
                style="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="포인트 내역"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/menuAlarm"
                style="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="알림"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- 정보 및 지원 섹션 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="정보 및 지원"
            android:textStyle="bold"
            android:textColor="#888"
            android:textSize="13sp"
            android:paddingStart="16dp"
            android:paddingTop="24dp"
            android:paddingBottom="8dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/menuHelp"
                style="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="도움말"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/menuAccountStatus"
                style="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="계정 상태"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/menuReport"
                style="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="문제 신고"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/menuCustomer"
                style="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="고객센터"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- 계정 섹션 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="계정"
            android:textStyle="bold"
            android:textColor="#888"
            android:textSize="13sp"
            android:paddingStart="16dp"
            android:paddingTop="24dp"
            android:paddingBottom="8dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/menuPasswordSecurity"
                style="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="비밀번호 및 보안"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/menuLogout"
                style="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="로그아웃"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/menuWithdrawal"
                style="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="회원탈퇴"
                android:textColor="#E53935"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 하단 네비게이션바 -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        style="@style/BottomNavTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
