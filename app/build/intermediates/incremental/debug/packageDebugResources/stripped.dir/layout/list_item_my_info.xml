<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/my_info_item_height"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingStart="@dimen/my_info_horizontal_padding"
    android:paddingEnd="@dimen/my_info_horizontal_padding">

    <TextView
        android:id="@+id/tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:textColor="@color/my_info_label_text_color"
        android:textSize="13sp"
        android:textStyle="bold"
        tools:text="임시 레이블"/>

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_arrow_forward_ios"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/iv_arrow"
        android:layout_toEndOf="@id/tv_label"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_centerVertical="true"
        android:gravity="end"
        android:textColor="@color/my_info_value_text_color"
        android:textSize="11sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="임시 값"/>
</RelativeLayout>